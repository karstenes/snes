    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'snes'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=snes",
                    "--package=snes"
                ],
                "filter": {
                    "name": "snes",
                    "kind": "bin"
                }
            },
            "env": {
                "RUST_LOG": "TRACE"
            },
            "args": [".\\super_metroid.sfc"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Debug Python file",
            "program": "${file}",
            "args": ["LOROM", ".\\super_mario_world.sfc"],
            "cwd": "${workspaceFolder}"
        }
    ]
}